@page
@model Questionnaire.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Liste des questions";
}

<h2>Liste des questions</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Question[0].Label)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Question[0].Type)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.QuestionId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.QuestionId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.QuestionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
