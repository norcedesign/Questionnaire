<div>
    <h4>Questions</h4>
    <hr />
    <table>

        @foreach (var item in Model.LesQuestions)
        {
            <tr>
                <td>
                    <span class="badge">@item.Ordre</span>
                </td>
                <td>
                    <b>&nbsp;@Html.DisplayFor(modelItem => item.Label)</b>
                </td>
                

            </tr>
            <tr>
                <td>
                    
                </td>
                <td>
                    @if (item.Type == "Text")
                    {
                        <p style="margin-left:20px">
                            <input name="@item.QuestionId" type="text" class="form-control" />
                        </p>
                    }
                    @if (item.Type == "Num")
                    {
                        <p style="margin-left:20px">
                            <input name="@item.QuestionId" type="number" />
                        </p>
                    }

                    @if (item.Type == "Option")
                    {
                        <p style="margin-left:20px">
                            <input type="radio" name="gender" value="male" /> Male<br>
                            <input type="radio" name="gender" value="female"> Female <br>
                        </p>
                    }
                    @if (item.Type == "Multi")
                    {
                        <p style="margin-left:20px">
                            <input type="checkbox" name="favorite_pet" value="Cats">Cats<br>
                            <input type="checkbox" name="favorite_pet" value="Dogs">Dogs<br>
                            <input type="checkbox" name="favorite_pet" value="Birds">Birds<br>
                        </p>
                    }

                </td>
            </tr>
        }
    </table>
